{
    "name": "edzardihmels/steam-api-connector",
    "description": "deliver some applications to work with the steam api",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Edzard Ihmels",
            "email": "edzard-ihmels@web.de"
        }
    ],
    "require": {
        "php": "^7.4",
        "tm/tooly-composer-script": "^1.4",
        "brick/money": "^0.5.0"
    },
    "scripts": {
        "post-install-cmd": "Tooly\\ScriptHandler::installPharTools",
        "post-update-cmd": "Tooly\\ScriptHandler::installPharTools"
    },
    "extra": {
        "tools": {
            "phpunit": {
                "url": "https://phar.phpunit.de/phpunit-8.phar",
                "force-replace": true
            },
            "phpcs": {
                "url": "https://github.com/squizlabs/PHP_CodeSniffer/releases/download/3.5.6/phpcs.phar",
                "sign-url": "https://github.com/squizlabs/PHP_CodeSniffer/releases/download/3.5.6/phpcs.phar.asc",
                "force-replace": true
            },
            "phpstan": {
                "url": "https://github.com/phpstan/phpstan/releases/download/0.12.43/phpstan.phar",
                "sign-url": "https://github.com/phpstan/phpstan/releases/download/0.12.43/phpstan.phar.asc",
                "force-replace": true
            }
        }
    },
    "require-dev": {
        "slevomat/coding-standard": "^6.4"
    }
}
